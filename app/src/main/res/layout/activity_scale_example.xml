<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".activities.ScaleExampleActivity">

    <ImageView
        android:id="@+id/ivExampleImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/butterfly"
        app:layout_constraintBottom_toTopOf="@id/controlsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration" />

        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2400" />

        <EditText
            android:id="@+id/etScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direction" />

        <Spinner
            android:id="@+id/spDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scale" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="on(view).scale(someValue)\non(view).scale(someValue, direction)\non(view).scale(someValue, direction){\n\t\tduration = millis\n}" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MultipleTargetsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">

            <TextView
                android:id="@+id/tvRotateTitle"
                style="@style/Title"
                android:text="@string/label_rotate_by"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/squareRotate1"
                style="@style/Square.Orange"
                android:rotation="45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRotateTitle" />

            <View
                android:id="@+id/squareRotate2"
                style="@style/Square.Black"
                android:rotation="60"
                app:layout_constraintStart_toEndOf="@id/squareRotate1"
                app:layout_constraintTop_toBottomOf="@id/tvRotateTitle" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_run_animations" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:text="@string/orchestra"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/sqr1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_purple"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/sqr2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sqr1" />

    <View
        android:id="@+id/sqr3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sqr2" />

    <View
        android:id="@+id/sqr4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sqr3" />

    <View
        android:id="@+id/sqr5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sqr4" />

    <LinearLayout
        android:id="@+id/sqr6"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@id/sqr1"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <View
        android:id="@+id/sqr7"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintRight_toLeftOf="@id/sqr2"
        app:layout_constraintTop_toBottomOf="@id/sqr1" />

    <View
        android:id="@+id/sqr8"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintRight_toLeftOf="@id/sqr3"
        app:layout_constraintTop_toBottomOf="@id/sqr2" />

    <View
        android:id="@+id/sqr9"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintRight_toLeftOf="@id/sqr4"
        app:layout_constraintTop_toBottomOf="@id/sqr3" />

    <LinearLayout
        android:id="@+id/sqr10"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@id/sqr5"
        app:layout_constraintTop_toBottomOf="@id/sqr4">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </LinearLayout>


    <View
        android:id="@+id/bottomSquareCenter"
        android:layout_width="18dp"
        android:layout_height="5dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_green_light"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/bottomSquareRight"
        android:layout_width="18dp"
        android:layout_height="5dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_dark"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bottomSquareCenter" />

    <View
        android:id="@+id/bottomSquareLeft"
        android:layout_width="18dp"
        android:layout_height="5dp"
        android:layout_margin="10dp"
        android:background="@android:color/holo_red_dark"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bottomSquareCenter" />

</androidx.constraintlayout.widget.ConstraintLayout>